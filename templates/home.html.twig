{%  extends 'layout.html.twig' %}

{% block content %}
<div class="container mt-3">
    <div class="row">
        <div class="col-12 bg-light border rounded-3 py-5 px-5 col-lg-8 mx-auto">
            <h1 class="display-3">Анализатор страниц</h1>
            <p class="lead">Бесплатно проверяйте сайты на SEO пригодность</p>
            <form action="{{ url_for('urls.store') }}" method="post" class="row row-gap-3 pb-3">
                <div class="col-sm-8">
                    <label for="url" class="visually-hidden">Введите Url</label>
                    <input type="text" id="url" name="url[name]" value="{{ url.name ?? '' }}" placeholder="https://www.example.com" class="form-control form-control-lg {% if errors is defined %} is-invalid {% endif %}">
                    {% if errors is defined %}
                        <div class="invalid-feedback">
                            {{ errors.name[0] }}
                        </div>
                    {% endif %}
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Проверить" class="btn btn-primary btn-lg text-uppercase px-5 mx-3">
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
